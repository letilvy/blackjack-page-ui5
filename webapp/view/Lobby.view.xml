<mvc:View controllerName="ase.ui5.blackjack.controller.Lobby"
	xmlns:control="ase.ui5.blackjack.control"
	xmlns="sap.m"
	xmlns:core="sap.ui.core"
	xmlns:mvc="sap.ui.core.mvc"
	height="100%">
	<Page title="{i18n>appTitle}">
		<content>
			<Panel id="panel_banker_cards" headerText="{i18n>titleBankerCards}">
				<content>
					<HBox justifyContent="Center" items="{/bankerCards}">
						<control:Card kind="{kind}" suit="{suit}"/>
					</HBox>
				</content>
			</Panel>

			<HBox justifyContent="Center" alignItems="Center" class="sapUiSmallMarginBottom sapUiLargeMarginTop">
				<Button id="btn_start_game" text="{i18n>btnStartGame}" type="Accept" press="onStartGame"/>
				<Button id="btn_deal" text="{i18n>btnDeal}" type="Emphasized" class="sapUiSmallMarginBegin" press="onDeal"/>
				
				<HBox visible="{= ${/status} === 'win' || ${/status} === 'lose'}" justifyContent="Center" alignItems="Center" class="sapUiLargeMarginBegin">
					<core:Icon src="sap-icon://competitor" color="#FFD700" size="3rem"/>
					<Title id="title_game_result" text="{= ${/status} === 'win' ? ${i18n>textPlayerWin}:${i18n>textBankerWin}}" class="sapUiTinyMarginBegin"/>
				</HBox>
			</HBox>

			<Panel id="panel_player_cards" headerText="{i18n>titlePlayerCards}">
				<content>
					<HBox justifyContent="Center" items="{/playerCards}">
						<control:Card kind="{kind}" suit="{suit}"/>
					</HBox>
				</content>
			</Panel>
		</content>
	</Page>
</mvc:View>